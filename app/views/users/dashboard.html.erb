<div class="container mt-5">
  <h1>Welcome, <%= current_user.name.titleize %>!</h1>
  <p>Here is your current status:</p>

  <div class="card mb-4">
    <div class="card-header">
      Current Points and Tier
    </div>
    <div class="card-body">
      <p>Tier: <%= current_user.tier %></p>
      <p>Points: <%= current_user.total_points %></p>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      Your Rewards
    </div>
    <div class="card-body">
      <% if @rewards.any? %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Type</th>
            </tr>
          </thead>
          <tbody>
            <% @rewards.each do |reward| %>
              <tr>
                <td><%= reward.name.titleize %></td>
                <td><%= reward.reward_type %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>No rewards earned yet.</p>
      <% end %>
    </div>
  </div>

  <div>
    <%= link_to 'View Payouts', payouts_path, class: 'btn btn-primary' %>
  </div>
</div>